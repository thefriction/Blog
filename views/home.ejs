<%- include('partials/header'); -%>

<% articles.forEach(function(post){ %> 

    <h2><%=post.title%></h2>
    <% if(post.content.length > 100 ){%>
    <p><%=post.content.substring(0, 100)%></p>
    <a href="/posts/<%=post.title%>">Read More</a>   
    <%} else{ %>
    <p><%=post.content%></p>
    
    <% } %>
<% }) %>

<%- include('partials/footer'); -%>