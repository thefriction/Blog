<%- include('partials/header'); -%>

<% blogs.forEach(function(blog){ %> 

    <h2><%=blog.title%></h2>
    <% if(blog.content.length > 100 ){%>
    <p><%=blog.content.substring(0, 100)%></p>
    <a href="/posts/<%=blog._id%>">Read More</a>   
    <%} else{ %>
    <p><%=blog.content%></p>
    
    <% } %>
<% }) %>

<%- include('partials/footer'); -%>